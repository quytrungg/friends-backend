<h1>Friend List</h1>

<div id="friends">
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-light">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td><%= friend.first_name %></td>
          <td><%= friend.last_name %></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td>
            <div class="btn-group">
              <%= link_to "Show", friend, class: "btn btn-primary btn-sm mr-1" %>
              <%= link_to "Edit", edit_friend_path(friend), class: "btn btn-secondary btn-sm mr-1" %>
              <%= link_to "Delete", friend_path(friend), data: { turbo_method: :delete }, class: "btn btn-danger btn-sm mr-1", remote: true %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to "Add Friend", new_friend_path, class: "btn btn-secondary" %>
</div>


